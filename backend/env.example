# ============================================================================
# MONGODB CONFIGURATION
# ============================================================================
# ⚠️ SECURITY: Replace with your own MongoDB credentials
# Get MongoDB URI from: https://www.mongodb.com/cloud/atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB_PREFIX=pii_sentinel_
MONGO_POOL_SIZE=100
MONGO_BATCH_INSERT_SIZE=100

# ============================================================================
# FLASK SECURITY CONFIGURATION
# ============================================================================
# ⚠️ SECURITY: Generate a new secret key using: python generate_secrets.py
FLASK_SECRET=your-flask-secret-key-here

# ⚠️ SECURITY: Generate a new API key using: python generate_secrets.py
API_KEY=your-api-key-here

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
STORAGE_PATH=./data
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_ENV=development
LOG_LEVEL=INFO

# ============================================================================
# PARALLEL PROCESSING - OPTIMIZED FOR 1000+ FILES
# ============================================================================
# Maximum I/O workers for parallel file processing (set high for large batches)
MAX_IO_WORKERS=128

# Maximum CPU workers for computation tasks
MAX_CPU_WORKERS=16

# Maximum concurrent file processing operations
MAX_CONCURRENT_FILES=256

# Batch size for micro-batch processing
BATCH_SIZE=50

# Queue size for thread pool
QUEUE_SIZE=500

# ============================================================================
# MEMORY OPTIMIZATION
# ============================================================================
# File I/O buffer size (in bytes) - Higher = faster but more memory
BUFFER_SIZE=8388608  # 8MB

# Enable memory pooling
MEMORY_POOLING_ENABLED=true

# Max objects in memory pool
MAX_POOL_SIZE=1000

# ============================================================================
# OCR & PII DETECTION OPTIMIZATION
# ============================================================================
# Use quantized (smaller, faster) OCR models
OCR_QUANTIZED=true

# OCR batch processing
OCR_BATCH_SIZE=8

# GPU acceleration for OCR (requires CUDA)
USE_GPU_OCR=false

# PDF rendering DPI (lower = faster but lower quality)
PDF_DPI=150

# Use advanced PII detection
USE_ADVANCED_DETECTOR=true

# ============================================================================
# PERFORMANCE OPTIMIZATION FLAGS
# ============================================================================
# Use GPU for faster processing (requires CUDA/cuDNN)
USE_GPU=true

# Enable EasyOCR quantization
EASYOCR_QUANTIZE=true

# Enable regex caching
REGEX_CACHING=true

# Enable parallel regex matching
PARALLEL_REGEX=true

# Smart file type detection
SMART_TYPE_DETECTION=true

# ============================================================================
# ADVANCED PERFORMANCE FEATURES
# ============================================================================
# Enable load balancing for large batches
LOAD_BALANCING_ENABLED=true

# Enable dynamic worker scaling
DYNAMIC_SCALING=true

# Enable adaptive concurrency based on system load
ADAPTIVE_CONCURRENCY=true

# CPU usage threshold for throttling (percentage)
CPU_THRESHOLD=85

# Memory usage threshold for throttling (percentage)
MEMORY_THRESHOLD=80

# ============================================================================
# TIMEOUTS & RELIABILITY
# ============================================================================
# Maximum processing time per file (seconds)
FILE_TIMEOUT=60

# Maximum total job time (seconds, 0 = no limit)
JOB_TIMEOUT=7200

# Retry failed files
RETRY_FAILED_FILES=true

# Number of retries for failed files
RETRY_ATTEMPTS=2

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Log performance metrics
LOG_PERFORMANCE=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=10

# Enable debug logging
DEBUG_LOGGING=false

# ============================================================================
# TWILIO SMS CONFIGURATION (for OTP delivery)
# ============================================================================
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# REDIS CONFIGURATION (Optional - for distributed caching)
# ============================================================================
# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# Enable Redis for distributed caching
REDIS_ENABLED=false

# Enable Redis caching
REDIS_CACHING=false

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# PAYMENT GATEWAY (RAZORPAY)
# ============================================================================
# Get credentials from: https://dashboard.razorpay.com/
# ⚠️ Use TEST keys for testing: rzp_test_xxxxx
# ⚠️ Use LIVE keys for production: rzp_live_xxxxx
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
# Note: Webhook not needed - using direct payment signature verification

